post_expand "snip.buffer[snip.line + 9] = 'EOF'"
snippet log "log output of script" bm
[[ -d "${HOME}/log" ]] || mkdir "${HOME}/log"
LOGFILE="${HOME}/log/$(basename "\$0" .sh).log"

$1() {
	cat <<EOF

-----------
$(date +%m-%d\ %H:%M)
-----------



