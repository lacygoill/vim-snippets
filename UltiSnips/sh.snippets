post_expand "snip.buffer[snip.line + 3] = 'EOF'"
snippet usage "print usage message" bm
if [[ $# $1`!p snip.rv = complete(t[1], ['-ne 12', '-lt 34'])` ]]; then
	cat <<EOF >&2
usage: `!v
  expand('%:e') is# 'sh' ? '$(basename "$0")' : '$0'
` ${2:command arguments}

	`!v
  expand('%:e') is# 'sh' ? 'exit 64' : 'return 64'
`
fi
$0
endsnippet

